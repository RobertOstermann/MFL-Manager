@page
@model Website.Pages.FreeAgencyModel
@{
    ViewData["Title"] = "Free Agency";
}

<link rel="stylesheet" href="~/css/free-agency.css">

<!-- Main Section -->
<div class="container-fluid padding" onload="determineButtons()">
    <div class="row padding">
        <!-- Chat Section -->
        <div class="col-xs-12 col-lg-6 col-xl-4 padding">
            <div class="card mb-2 h-100">
                <div class="card-body chat-box" id="chat-box">
                    
                </div>
                <!-- Message input and submit button -->
                <div class="card-footer">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text message-button">Send Message To: </label>
                        </div>
                        <select class="custom-select" id="message-recipient">
                            <option selected>Everyone</option>
                            <option value="1">Tornados</option>
                            <option value="2">Penguins</option>
                            <option value="3">Bombers</option>
                            <option value="4">Dactyls</option>
                            <option value="5">ODB's</option>
                            <option value="6">Storm Dynasty</option>
                            <option value="7">Nike Storm</option>
                            <option value="8">Gorillas</option>
                            <option value="9">Power</option>
                            <option value="10">Ram</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control message-text" placeholder="Message" id="message-input">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary message-button" type="button" id="submit-message">Send Message</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bid Section -->
        <div class="col-xs-12 col-lg-6 col-xl-4 padding">
            <div class="card mb-2 h-100" id="bid-player-card">
                <img class="card-img-top" src="~/images/teams/FootballField.jpg" id="player-image">
                <div class="card-body">
                    <h4 class="card-title" id="player-name">Free Agency</h4>
                    <h5 class="card-subtitle mb-2 text-muted" id="player-team">Starting Soon</h5>
                </div>
                <!-- Bid input, opt out, and submit buttons -->
                <div class="card-footer" id="bid-card-footer">
                    <div class="bid-section">
                        <h4 class="bid-label" id="current-bid">None: $0.00</h4>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-danger bid-button" type="button" id="opt-out">Opt Out</button>
                            </div>
                            <input type="number" class="form-control" placeholder="0.00" step="0.50" min="0.00" id="bid-input">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary bid-button" type="button" id="submit-bid">Submit Bid</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Other Section-->
        <div class="col-xs-12 col-xl-4 padding">
            <div class="card mb-2 h-100">
                <div class="card-body">
                    <h4 class="card-title">Phil Ho</h4>
                    <p class="card-text">
                        Phil is an Internet entrepreneur with
                        almost 20 years of experience.
                    </p>
                    <a href="#" class="btn btn-outline-secondary">See Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/freeAgency.js"></script>
